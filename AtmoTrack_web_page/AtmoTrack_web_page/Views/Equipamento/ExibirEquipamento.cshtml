@model EquipamentoViewModel

@{
    ViewData["Title"] = "Equipamento";
}

<head class="title">
    <h1>Visualização do Equipamento</h1>
</head>

<table class="table">
    <tr class="primary">
        <th>@Model.Nome</th>
    </tr>
</table>
<hr />

<body class="usuario">
    <table class="table1">
        <tr>
            <td>Empresa</td>
            <td class="linha-azulescuro">@ViewBag.EmpresaNome</td>
        <tr />
        <tr>
            <td>MAC Address</td>
            <td class="linha-azulescuro">@Model.MacAddress</td>
        <tr />
        <tr>
            <td>IP Address</td>
            <td class="linha-azulescuro">@Model.IpAddress</td>
        <tr />
        <tr>
            <td>SSID</td>
            <td class="linha-azulescuro">@Model.SSID</td>
        <tr />
        <tr>
            <td>Intensidade de Sinal</td>
            <td class="linha-azulescuro">@Model.SignalStrength dBm</td>
        <tr />
        <tr>
            <td>Status de Conexão</td>
            <td class="linha-azulescuro">@Model.ConnectionStatus</td>
        <tr />
        <tr>
            <td>Dados do Sensor</td>
            <td class="linha-azulescuro">@Model.SensorData</td>
        <tr />
        <tr>
            <td>Status do Equipamento</td>
            <td class="linha-azulescuro">@Model.StatusEquipamento</td>
        <tr />
        <tr>
            <td>Token de Autenticação</td>
            <td class="linha-azulescuro">@Model.AuthToken</td>
        <tr />
        <tr>
            <td>Versão do Firmware</td>
            <td class="linha-azulescuro">@Model.FirmwareVersion</td>
        <tr />
        <tr>
            <td>Data de Registro</td>
            <td class="linha-azulescuro">@Model.DataRegistro.ToString("dd/MM/yyyy")</td>
        <tr />
        <tr>
            <td>Última Atualização</td>
            <td class="linha-azulescuro">@Model.LastUpdate.ToString("dd/MM/yyyy")</td>
        <tr />
        <tr>
            <td>Data de Alteração</td>
            <td class="linha-azulescuro">@(Model.DataAlteracao?.ToString("dd/MM/yyyy") ?? "Não alterado")</td>
        <tr />
    </table>
</body>

<style>
    th {
        color: black;
        font-size: 2rem;
        border: 2px solid black;
        border-radius: 10px;
    }

    td {
        font-size: 1.2rem;
        border: 1px solid black;
    }

    .linha-azulescuro {
        background-color: #112E3C;
        color: #0DCAF0;
    }

    .primary {
        background-color: #0DCAF0;
    }

    tr {
        vertical-align: auto !important;
        background-color: #0DCAF0;
        color: black;
    }

    .title {
        padding-top: 2%;
        padding-bottom: 5%;
    }

    .usuario .container-geral {
        margin: 0 !important;
        padding: 0 !important;
        width: 100% !important;
        height: 100%;
        max-width: 100% !important;
        max-height: 100%;
        justify-content: initial;
    }

    .container {
        min-height: 100% !important;
        min-width: 100%;
        margin: 0 !important;
        padding: 0 !important;
        justify-content: center;
        align-content: center;
        justify-items: center;
        align-items: center;
    }

    .table {
        width: 50%;
        margin-top: 5%;
        border-collapse: separate;
        border-spacing: 1px;
        text-align: center;
    }

    .table1 {
        width: 50%;
        border-collapse: separate;
        border-spacing: 1px;
        text-align: center;
        margin-bottom: 5%;
    }

    td:first-child {
        border-top-left-radius: 15px;
        border-bottom-left-radius: 15px;
    }

    td:last-child {
        border-top-right-radius: 15px;
        border-bottom-right-radius: 15px;
    }

</style>