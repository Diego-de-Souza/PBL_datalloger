@model List<EmpresaViewModel>
@{
    ViewData["Title"] = "Empresas Cadastradas";
}

<head>
    <h1 class="title">Empresas Cadastradas</h1>
</head>


<a href="/empresa/NovoRegistro" class="btn btn-info">Novo registro</a>
<br />

<body class="usuario">
    <div class="container-geral">
        <table class="table">
            <tr>
                <th>Ações</th>
                <th>Id</th>
                <th>Nome Fanfasia</th>
                <th>Web Site</th>
                <th>Tipo</th>
            </tr>

            @for (int i = 0; i < Model.Count; i++)
            {
                var em = Model[i];
                var rowClass = i % 2 == 0 ? "linha-verde" : "linha-azulescuro";

                <tr class="@rowClass">
                    <td>
                        <a href="/empresa/editar?id=@em.Id">
                            <img src="/images/edit.png" class="image" />
                        </a>
                        &nbsp;
                        <a href="javascript:apaga(@em.Id)">
                            <img src="/images/del.png" class="image" />
                        </a>
                        &nbsp;
                        <a href="/empresa/exibir?id=@em.Id">
                            <img src="/images/view.png" class="image" />
                        </a>
                    </td>
                    <td>@em.Id</td>
                    <td>@em.NomeFantasia</td>
                    <td>@em.WebSite</td>
                    <td>@em.Tipo</td>
                </tr>
            }
        </table>
    </div>
</body>


<script>
    function apaga(id) {
        if (confirm('Apaga mesmo?'))
            location.href = "/empresa/Delete?id=" + id;
    }
</script>

<style>
    th{
        color: #0DCAF0;
    }

    .image {
        width: 25px;
    }

    .title {
        padding-top: 2%;
        padding-bottom: 5%;
    }

    .linha-verde {
        background-color: #0DCAF0;
        color: black; 
    }

    .linha-azulescuro {
        background-color: #112E3C;
        color: #0DCAF0;
    }

    .usuario .container-geral {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        justify-content: initial;
    }

    .table {
        width: 80%;
        margin-top: 5%;
        border-collapse: separate;
        border-radius: 10px;
        border-spacing: 0px;
        align-content: center;
        align-items: center;
        align-self: center;
    }

    th:first-child {
        border-top-left-radius: 10px;
    }

    th:last-child {
        border-top-right-radius: 10px;
    }

    tr:last-child td:first-child {
        border-bottom-left-radius: 10px;
    }

    tr:last-child td:last-child {
        border-bottom-right-radius: 10px;
    }

    th, td {
        padding: 8px;
        text-align: center;
        border: 1px solid black;
    }
</style>
