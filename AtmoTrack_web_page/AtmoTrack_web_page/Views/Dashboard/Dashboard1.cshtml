<h2>Dashboard 1</h2>

<div>
    <canvas id="myChart" width="1000" height="400"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const labels = ['0', '10', '20', '30', '40', '50', '60'];
        const data = {
            labels: labels,
            datasets: [{
                label: 'Temperatura (°C)',
                data: [15, 20, 25, 22, 18, 30, 28], // Dados de temperatura fictícios
                fill: true, // Para não preencher a área abaixo da linha
                borderColor: 'rgba(75, 192, 192, 1)', // Cor da linha
                tension: 0.1 // Para suavizar a linha
            }]
        };

        const config = {
            type: 'line', // Tipo de gráfico como 'line'
            data: data,
            options: {
                animations: {
                    borderWidth: {
                        duration: 1000,
                        easing: 'easeInOutQuad',
                        from: 1,
                        to: 5
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true, // Iniciar o eixo Y em 0
                        title: {
                            display: true,
                            text: 'Temperatura (°C)' // Título do eixo Y
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Segundos' // Título do eixo X
                        }
                    }
                }
            }
        };

        const myChart = new Chart(
            document.getElementById('myChart'),
            config
        );
    });
</script>