  @model List<EmpresaViewModel>

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <h3 class="card-title text-center mb-4 text-primary">Selecione o Serviço</h3>

            <form asp-controller="Dashboard" asp-action="Dashboard1" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="NomeService" class="form-label">Serviço</label>
                    <select id="NomeService" name="NomeService" class="form-select" required>
                        <option value="" selected disabled>Selecione um Serviço</option>
                        @foreach (var empresa in Model)
                        {
                            <option value="@empresa.NomeService">@empresa.NomeService</option>
                        }
                    </select>
                    <div class="invalid-feedback">Por favor, selecione uma empresa.</div>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-arrow-right-circle"></i> Abrir Dashboard
                </button>
            </form>
        </div>
    </div>
</div>