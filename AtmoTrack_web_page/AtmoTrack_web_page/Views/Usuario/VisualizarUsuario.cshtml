@model UsuarioViewModel

@{
    ViewData["Title"] = "Usuário";
}

<head class="title">
    <h1>Visualização de Usuário</h1>
</head>

<table class="table">
    <tr class="primary">
        <th>@Model.Nome</th>
    </tr>
</table>
<hr />

<body class="usuario">
    <table class="table1">
        <tr>
            <td>Email</td>
            <td class="linha-azulescuro">@Model.Email</td>
        <tr />
        <tr>
            <td>Endereço</td>
            <td class="linha-azulescuro">@Model.Endereco</td>
        <tr />
        <tr>
            <td>CEP</td>
            <td class="linha-azulescuro">@Model.Cep</td>
        <tr />
        <tr>
            <td>Telefone</td>
            <td class="linha-azulescuro">@Model.Telefone</td>
        <tr />
        <tr>
            <td>Telefone Comercia</td>
            <td class="linha-azulescuro">@Model.TelefoneComercial</td>
        <tr />
        <tr>
            <td>Empresa</td>
            <td class="linha-azulescuro">@Model.Empresa</td>
        <tr />
        <tr>
            <td>Cargo</td>
            <td class="linha-azulescuro">@Model.Cargo</td>
        <tr />
        <tr>
            <td>Estado</td>
            <td class="linha-azulescuro">@ViewBag.EstadoNome</td>
        <tr />
        <tr>
            <td>Cidade</td>
            <td class="linha-azulescuro">@ViewBag.CidadeNome</td>
        <tr />
        <tr>
            <td>Data de Registro</td>
            <td class="linha-azulescuro">@Model.DataRegistro.ToString("dd/MM/yyyy")</td>
        <tr />
        <tr>
            <td>Data de Alteração</td>
            <td class="linha-azulescuro">@(Model.DataAlteracao?.ToString("dd/MM/yyyy") ?? "Não alterado")</td>
        <tr />
    </table>
</body>


<style>
    th {
        color: black;
        font-size: 2rem;
        border: 2px solid black;
        border-radius: 10px;
    }

    td {
        font-size: 1.2rem;
        border: 1px solid black;
    }

    .linha-azulescuro {
        background-color: #112E3C;
        color: #0DCAF0;
    }

    .primary {
        background-color: #0DCAF0;
    }

    tr {
        background-color: #0DCAF0;
        color: black;
    }

    .title {
        padding-top: 2%;
        padding-bottom: 5%;
    }

    .usuario .container-geral {
        margin: 0 !important;
        padding: 0 !important;
        width: 100% !important;
        height: 100%;
        max-width: 100% !important;
        max-height: 100%;
        justify-content: initial;
    }

    .container {
        min-height: 100% !important;
        min-width: 100%;
        margin: 0 !important;
        padding: 0 !important;
        justify-content: center;
        align-content: center;
        justify-items: center;
        align-items: center;
    }

    .table {
        width: 50%;
        margin-top: 5%;
        border-collapse: separate;
        border-spacing: 1px;
        text-align: center;
    }

    .table1 {
        width: 50%;
        border-collapse: separate;
        border-spacing: 1px;
        text-align: center;
        margin-bottom: 5%;
    }

    td:first-child {
        border-top-left-radius: 15px;
        border-bottom-left-radius: 15px;
    }

    td:last-child {
        border-top-right-radius: 15px;
        border-bottom-right-radius: 15px;
    }

</style>